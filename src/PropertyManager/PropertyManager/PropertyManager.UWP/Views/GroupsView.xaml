<views:MvxWindowsPage
    x:Class="PropertyManager.UWP.Views.GroupsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:MvvmCross.WindowsUWP.Views"
    mc:Ignorable="d">

    <views:MvxWindowsPage.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <ContinuumNavigationTransitionInfo/>
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>
    </views:MvxWindowsPage.Transitions>
    
    <views:MvxWindowsPage.Resources>
        <Style x:Key="GridViewStyle" TargetType="GridView">
            <Setter Property="IsItemClickEnabled" Value="True"/>
            <Setter Property="SelectionMode" Value="None"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Setter Property="IsMultiSelectCheckBoxEnabled" Value="False"/>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="GridViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Margin" Value="0"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </views:MvxWindowsPage.Resources>

    <Grid Style="{StaticResource PageRootGridStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="88"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="Normal">
                    <VisualState.Setters>
                        <Setter Target="SearchBox.HorizontalAlignment" Value="Right"></Setter>
                        <Setter Target="SearchBox.VerticalAlignment" Value="Top"></Setter>
                        <Setter Target="SearchBox.MinWidth" Value="280"></Setter>
                        <Setter Target="SlimGridView.Visibility" Value="Collapsed"></Setter>
                        <Setter Target="NormalGridView.Visibility" Value="Visible"></Setter>
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="700"></AdaptiveTrigger>
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="Slim">
                    <VisualState.Setters>
                        <Setter Target="SearchBox.HorizontalAlignment" Value="Stretch"></Setter>
                        <Setter Target="SearchBox.VerticalAlignment" Value="Bottom"></Setter>
                        <Setter Target="SlimGridView.Visibility" Value="Visible"></Setter>
                        <Setter Target="NormalGridView.Visibility" Value="Collapsed"></Setter>
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"></AdaptiveTrigger>
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    
        <!--Header-->
        <Grid Grid.Row="0">
            <Button Style="{StaticResource AccentHeaderButtonStyle}"
                    Content="&#xE909;"
                    IsHitTestVisible="False"/>
            <TextBlock Text="PROPERTIES"
                       Style="{StaticResource PageTitleTextBlock}"/>
            <SearchBox x:Name="SearchBox" 
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Bottom" Margin="11"
                       PlaceholderText="Find a property" 
                       QueryText="{Binding Query, Mode=TwoWay}"
                       Style="{StaticResource AccentSearchBoxStyle}" 
                       QuerySubmitted="OnQuerySubmitted"/>
        </Grid>

        <!--Slim Grid View-->
        <GridView x:Name="SlimGridView" Grid.Row="1" ItemsSource="{Binding FilteredGroups}"
                  Style="{StaticResource GridViewStyle}"
                  ItemClick="GridViewOnItemClick">
            <GridView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Height="60" Orientation="Horizontal" Padding="13,0"
                                VerticalAlignment="Center" HorizontalAlignment="Stretch">
                        <TextBlock Text="&#xE913;"
                                   Style="{StaticResource ListIconTextBlock}"
                                   VerticalAlignment="Center"/>
                        <StackPanel Orientation="Vertical"
                                    Margin="15,0,0,0"
                                    VerticalAlignment="Center">
                            <TextBlock Text="{Binding DisplayName}"/>
                            <TextBlock Text="{Binding Mail}" 
                                       Style="{StaticResource FadedBodyTextBlock}"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsStackPanel Orientation="Vertical" HorizontalAlignment="Stretch"/>
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
        </GridView>

        <!--Normal Grid View-->
        <GridView x:Name="NormalGridView" Grid.Row="1" ItemsSource="{Binding FilteredGroups}"
                  Style="{StaticResource GridViewStyle}"
                  ItemClick="GridViewOnItemClick">
            <GridView.ItemTemplate>
                <DataTemplate>
                    <Grid Width="175" Height="175" Margin="15">
                     <StackPanel Orientation="Vertical"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center">
                            <TextBlock Text="&#xE913;"
                                       Style="{StaticResource GridIconTextBlock}"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding DisplayName}" 
                                       Style="{StaticResource CenteredBodyTextBlock}"/>
                            <TextBlock Text="{Binding Mail}" 
                                       Style="{StaticResource CenteredFadedBodyTextBlock}"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid Orientation="Horizontal" VerticalAlignment="Center"
                                   HorizontalAlignment="Center" MaximumRowsOrColumns="4"/>
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
        </GridView>
    </Grid>
</views:MvxWindowsPage>

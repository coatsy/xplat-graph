<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExcelFormsTest.Views.ExpensesChartView">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Label Grid.Row="0" Text="{Binding Title}" HorizontalOptions="Center" />
    <Image Grid.Row="1" Source="{Binding ChartImage}" />
    <Label Grid.Row="0" Text="{Binding Message}" HorizontalOptions="Center" />
  </Grid>
</ContentPage>